include components/mylevelbox.pug
doctype html
html(lang="en")
    head
        include components/header.pug
        title Level #{current_level}
        style.
            .container{
                display:flex;
                flex-wrap:wrap;
                justify-content: center;
                margin: auto;
                }
                img{
                width:50%;
                margin:auto;
                object-fit:contain
                }
            @media (max-width: 800px) {
                img{
                    width:100%;
                    padding :0px;
                    padding-bottom:20px;
                }
            }    

    body
        +levelbox(current_level)

        div(style='text-align:center; padding-top:225px;width:90%;margin:auto;')

            p(style='font-weight:900;letter-spacing:1px;font-size:20px') #{heading_content}
            br
        .container
            img(src='https://upload.wikimedia.org/wikipedia/commons/thumb/1/14/CrosswordUSA.svg/1200px-CrosswordUSA.svg.png' style='padding:20px;' alt='nature')
            img(src='https://upload.wikimedia.org/wikipedia/commons/thumb/1/14/CrosswordUSA.svg/1200px-CrosswordUSA.svg.png' style='padding:20px;' alt='nature')
            br

        include components/myinput.pug