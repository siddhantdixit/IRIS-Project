mixin levelbox(currentlevel)
    <div class="boxes">
    <div class="box"></div>
    <div class="box"></div>
    <div class="box">
        <div class="progress">
        <div class="bar">
            <div class="bar__fill" style="width: 33%"></div>
        </div>
        <div class="point point--complete">
            <div class="bullet"></div>
            <label class="label">1</label>
        </div>
        <div class="point point--active">
            <div class="bullet"></div>
            <label class="label">2</label>
        </div>
        <div class="point">
            <div class="bullet"></div>
            <label class="label">3</label>
        </div>
        <div class="point">
            <div class="bullet"></div>
            <label class="label">4</label>
        </div>
        </div>
    </div>
    </div>
