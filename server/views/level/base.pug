        <div class="boxes">
        <div class="box"></div>
        <div class="box"></div>
        <div class="box">
            <div class="progress">
            <div class="bar">
                <div class="bar__fill" id="id" style="width: 66%"></div>
            </div>
            <div class="point  " id ="1">
                <div class="bullet"></div>
                <label class="label">1</label>
            </div>
            <div class="point  " id="2">
                <div class="bullet"></div>
                <label class="label">2</label>
            </div>
            <div class="point " id="3">
                <div class="bullet"></div>
                <label class="label">3</label>
            </div>
            <div class="point " id="4">
                <div class="bullet"></div>
                <label class="label">4</label>
            </div>
            </div>
        </div>
        </div>
        <a title="Settings" href="/settings" style="position: absolute;font-size: 40px;bottom: 30px;right: 30px;text-shadow: 0px 0px 1px;color: rosybrown;">
         <i class="bi bi-gear-fill"></i>
        </a>
        script(src="js/views/level/base.js") 
        script.
            const level = 4;
            if (level==1){
            document.getElementById("id").style.width="0%";
            var element = document.getElementById("1");
            element.classList.add("point--active");
            }
            if (level==2){
            document.getElementById("id").style.width="33%";
            var element = document.getElementById("2");
            element.classList.add("point--active");
            }
            if (level==3){
            document.getElementById("id").style.width="66%";
            var element = document.getElementById("3");
            element.classList.add("point--active");
            }
            if (level==4){
            document.getElementById("id").style.width="99%";
            var element = document.getElementById("4");
            element.classList.add("point--active");
            }